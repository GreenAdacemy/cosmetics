<div  data-controller='infinite-scroll product'>
  <%= turbo_stream_from "products" %>
  <%= turbo_frame_tag "products" do %>    
    <%= render partial: 'products/items', locals: { products: products, user: user, clear_screen: local_assigns[:clear_screen] } %>
  <% end %>
  <div data-infinite-scroll-target='scrollArea'>
  </div>
  <% if pagy.present? %>
    <div id='pagination' data-infinite-scroll-target="pagination" class='invisible' >
      <%== pagy_bootstrap_nav(pagy) %>
    </div>
  <% end %>
</div>