<% if local_assigns[:only_content] %>
  <% products.each do |product| %>
    <%= render partial: 'products/product', locals: { product: product, user: user } %>
  <% end %>
<% else %>
  <div class='products px-1' id='items'>
    <% if products.any? || clear_screen %>
      <% products.each do |product| %>
        <%= render partial: 'products/product', locals: { product: product, user: user } %>
      <% end %>
    <% else %>
      <%= render 'shared/show_empty' %>
    <% end %>
  </div>
<% end %>